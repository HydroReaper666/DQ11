<Window x:Class="DQ11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DQ11"
        mc:Ignorable="d"
        Title="DQ11 セーブデータ改造(Nintendo 3DS)" Height="520" Width="750" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="ファイル(_F)">
                <MenuItem x:Name="MenuItemFileOpen" Header="開く(_O)" Click="MenuItemFileOpen_Click"/>
                <MenuItem x:Name="MenuItemFileSave" Header="上書き保存(_S)" Click="MenuItemFileSave_Click"/>
                <MenuItem x:Name="MenuItemFileSaveAs" Header="名前を付けて保存(_S)" Click="MenuItemFileSaveAs_Click"/>
                <Separator/>
                <MenuItem x:Name="MenuItemExit" Header="終了(_X)" Click="MenuItemExit_Click"/>
            </MenuItem>
            <MenuItem x:Name="MenuItemAbout" Header="情報(_A)" Click="MenuItemAbout_Click"/>
        </Menu>
        <ToolBar Grid.Row="1">
            <Button x:Name="ToolBarFileOpen" Width="32" Height="32" Click="ToolBarFileOpen_Click">
                <Image Source="{StaticResource Open}"/>
            </Button>
            <Button x:Name="ToolBarFileSave" Width="32" Height="32" Click="ToolBarFileSave_Click">
                <Image Source="{StaticResource Save}"/>
            </Button>
        </ToolBar>
        <TabControl Grid.Row="2">
            <TabItem Header="人物">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="ListBoxChar" SelectionChanged="ListBoxChar_SelectionChanged"/>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Content="名前"/>
                        <Label Content="Lv" Grid.Row="1"/>
                        <Label Content="経験値" Grid.Row="2"/>
                        <Label Content="現在HP" Grid.Row="3"/>
                        <Label Content="現在MP" Grid.Row="4"/>
                        <Label Content="最大HP+" Grid.Row="5"/>
                        <Label Content="最大MP+" Grid.Row="6"/>
                        <Label Content="こうげき魔力+" Grid.Row="7"/>
                        <Label Content="かいふく魔力+" Grid.Row="8"/>
                        <Label Content="ちから+" Grid.Row="9"/>
                        <Label Content="みのまもり+" Grid.Row="10"/>
                        <Label Content="すばやさ+" Grid.Row="11"/>
                        <Label Content="きようさ+" Grid.Row="12"/>
                        <Label Content="みりょく+" Grid.Row="13"/>
                        <Label Content="スキル" Grid.Row="14"/>
                        <TextBox x:Name="TextBoxCharName" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxCharLv" Grid.Row="1" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxCharExp" Grid.Row="2" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxCharHP" Grid.Row="3" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxCharMP" Grid.Row="4" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxCharMaxHP" Grid.Row="5" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxCharMaxMP" Grid.Row="6" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxCharAttackMagic" Grid.Row="7" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxCharHealMagic" Grid.Row="8" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxCharAttack" Grid.Row="9" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxCharDiffence" Grid.Row="10" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxCharSpeed" Grid.Row="11" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxCharSkillful" Grid.Row="12" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxCharCharm" Grid.Row="13" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxCharSkill" Grid.Row="14" Grid.Column="1"/>
                    </Grid>
                    <StackPanel Grid.Column="3">
                        <ComboBox x:Name="ComboBoxCharItemPage" SelectionChanged="ComboBoxCharItemPage_SelectionChanged">
                            <ComboBoxItem Content="1 / 2"/>
                            <ComboBoxItem Content="2 / 2"/>
                        </ComboBox>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <ComboBox x:Name="ComboBoxCharItem1"/>
                                <ComboBox x:Name="ComboBoxCharItem2"/>
                                <ComboBox x:Name="ComboBoxCharItem3"/>
                                <ComboBox x:Name="ComboBoxCharItem4"/>
                                <ComboBox x:Name="ComboBoxCharItem5"/>
                                <ComboBox x:Name="ComboBoxCharItem6"/>
                                <ComboBox x:Name="ComboBoxCharItem7"/>
                                <ComboBox x:Name="ComboBoxCharItem8"/>
                                <ComboBox x:Name="ComboBoxCharItem9"/>
                                <ComboBox x:Name="ComboBoxCharItem10"/>
                                <ComboBox x:Name="ComboBoxCharItem11"/>
                                <ComboBox x:Name="ComboBoxCharItem12"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <ComboBox x:Name="ComboBoxCharItemCount1" Grid.Column="1"/>
                                <ComboBox x:Name="ComboBoxCharItemCount2" Grid.Column="1"/>
                                <ComboBox x:Name="ComboBoxCharItemCount3" Grid.Column="1"/>
                                <ComboBox x:Name="ComboBoxCharItemCount4" Grid.Column="1"/>
                                <ComboBox x:Name="ComboBoxCharItemCount5" Grid.Column="1"/>
                                <ComboBox x:Name="ComboBoxCharItemCount6" Grid.Column="1"/>
                                <ComboBox x:Name="ComboBoxCharItemCount7" Grid.Column="1"/>
                                <ComboBox x:Name="ComboBoxCharItemCount8" Grid.Column="1"/>
                                <ComboBox x:Name="ComboBoxCharItemCount9" Grid.Column="1"/>
                                <ComboBox x:Name="ComboBoxCharItemCount10" Grid.Column="1"/>
                                <ComboBox x:Name="ComboBoxCharItemCount11" Grid.Column="1"/>
                                <ComboBox x:Name="ComboBoxCharItemCount12" Grid.Column="1"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    <StackPanel Grid.Column="3" VerticalAlignment="Bottom">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="3"/>
                                <RowDefinition/>
                                <RowDefinition Height="3"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="3"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="ButtonCharStatusCopy" Content="コピー" Click="ButtonCharStatusCopy_Click"/>
                            <Button x:Name="ButtonCharStatusPaste" Content="貼付" Grid.Column="2" Click="ButtonCharStatusPaste_Click"/>
                            <Button x:Name="ButtonCharStatusMin" Content="最弱" Grid.Row="2" Click="ButtonCharStatusMin_Click"/>
                            <Button x:Name="ButtonCharStatusMax" Content="最強" Grid.Row="2" Grid.Column="2" Click="ButtonCharStatusMax_Click"/>
                            <Button x:Name="ButtonCharStatusDecision" Content="決定" Grid.Row="4" Grid.ColumnSpan="3" Click="ButtonCharStatusDecision_Click"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="ヨッチ族">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DockPanel>
                        <StackPanel Orientation="Vertical" DockPanel.Dock="Bottom">
                            <Button x:Name="ButtonYochiRemove" Content="削除" Click="ButtonYochiRemove_Click"/>
                            <Button x:Name="ButtonYochiAppend" Content="追加" Click="ButtonYochiAppend_Click"/>
                        </StackPanel>
                        <ListBox x:Name="ListBoxYochi" SelectionChanged="ListBoxYochi_SelectionChanged"/>
                    </DockPanel>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Content="名前"/>
                        <Label Content="色" Grid.Row="1"/>
                        <Label Content="ランク" Grid.Row="2"/>
                        <Label Content="やる気" Grid.Row="3"/>
                        <Label Content="武器" Grid.Row="4"/>
                        <Label Content="ぼうし" Grid.Row="5"/>
                        <TextBox x:Name="TextBoxYochiName" Grid.Column="1"/>
                        <ComboBox x:Name="ComboBoxYochiColor" Grid.Row="1" Grid.Column="1">
                            <ComboBoxItem Content="赤"/>
                            <ComboBoxItem Content="青"/>
                            <ComboBoxItem Content="緑"/>
                            <ComboBoxItem Content="黄"/>
                            <ComboBoxItem Content="紫"/>
                            <ComboBoxItem Content="白"/>
                            <ComboBoxItem Content="メタル"/>
                            <ComboBoxItem Content="赤青"/>
                            <ComboBoxItem Content="赤緑"/>
                            <ComboBoxItem Content="赤黄"/>
                            <ComboBoxItem Content="赤紫"/>
                            <ComboBoxItem Content="赤白"/>
                            <ComboBoxItem Content="青緑"/>
                            <ComboBoxItem Content="青黄"/>
                            <ComboBoxItem Content="青紫"/>
                            <ComboBoxItem Content="青白"/>
                            <ComboBoxItem Content="緑黄"/>
                            <ComboBoxItem Content="緑紫"/>
                            <ComboBoxItem Content="緑白"/>
                            <ComboBoxItem Content="黄紫"/>
                            <ComboBoxItem Content="黄白"/>
                            <ComboBoxItem Content="紫白"/>
                            <ComboBoxItem Content="赤青 v2"/>
                            <ComboBoxItem Content="赤緑 v2"/>
                            <ComboBoxItem Content="赤黄 v2"/>
                            <ComboBoxItem Content="赤紫 v2"/>
                            <ComboBoxItem Content="赤白 v2"/>
                            <ComboBoxItem Content="青緑 v2"/>
                            <ComboBoxItem Content="青黄 v2"/>
                            <ComboBoxItem Content="青紫 v2"/>
                            <ComboBoxItem Content="青白 v2"/>
                            <ComboBoxItem Content="緑黄 v2"/>
                            <ComboBoxItem Content="緑紫 v2"/>
                            <ComboBoxItem Content="緑白 v2"/>
                            <ComboBoxItem Content="黄紫 v2"/>
                            <ComboBoxItem Content="黄白 v2"/>
                            <ComboBoxItem Content="紫白 v2"/>
                        </ComboBox>
                        <ComboBox x:Name="ComboBoxYochiRank" Grid.Row="2" Grid.Column="1">
                            <ComboBoxItem Content="F"/>
                            <ComboBoxItem Content="E"/>
                            <ComboBoxItem Content="D"/>
                            <ComboBoxItem Content="C"/>
                            <ComboBoxItem Content="B"/>
                            <ComboBoxItem Content="A"/>
                            <ComboBoxItem Content="S"/>
                        </ComboBox>
                        <TextBox x:Name="TextBoxYochiMotivation" Grid.Row="3" Grid.Column="1"/>
                        <ComboBox x:Name="ComboBoxYochiWeapon" Grid.Row="4" Grid.Column="1"/>
                    </Grid>
                    <StackPanel Grid.Column="3" VerticalAlignment="Bottom">
                        <Button x:Name="ButtonYochiStatusDecision" Content="決定" Height="50" Click="ButtonYochiStatusDecision_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="ふくろ">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DockPanel>
                        <Label Content="どうぐぶくろ" DockPanel.Dock="Top"/>
                        <ComboBox x:Name="ComboBoxBagToolPage"  DockPanel.Dock="Top"/>
                        <StackPanel x:Name="StackPanelBagTool" Margin="0,5,0,0"/>
                    </DockPanel>
                    <DockPanel Grid.Column="1">
                        <Label Content="そうびぶくろ" DockPanel.Dock="Top"/>
                        <ComboBox x:Name="ComboBoxBagEquipmentPage"  DockPanel.Dock="Top"/>
                        <StackPanel x:Name="StackPanelBagEquipment" Margin="0,5,0,0"/>
                    </DockPanel>
                </Grid>
            </TabItem>
            <TabItem Header="全体">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="85"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="35"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Content="プレイ時間" Grid.RowSpan="3" VerticalAlignment="Center"/>
                        <Label Content="時間" Grid.Column="2"/>
                        <Label Content="分"  Grid.Row="1" Grid.Column="2"/>
                        <Label Content="秒"  Grid.Row="2" Grid.Column="2"/>
                        <Label Content="もち金" Grid.Row="3"/>
                        <Label Content="G" Grid.Row="3" Grid.Column="2"/>
                        <Label Content="銀行" Grid.Row="4"/>
                        <Label Content="G" Grid.Row="4" Grid.Column="2"/>
                        <Label Content="カジノコイン" Grid.Row="5"/>
                        <Label Content="枚" Grid.Row="5" Grid.Column="2"/>
                        <Label Content="ちいさなメダル" Grid.Row="6"/>
                        <Label Content="枚" Grid.Row="6" Grid.Column="2"/>
                        <Label Content="並び順" Grid.Row=" 11" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="TextBoxPlayHour" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxPlayMinute" Grid.Row="1" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxPlaySecond" Grid.Row="2" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxGoldHand" Grid.Row="3" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxGoldBank" Grid.Row="4" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxCasinoCoin" Grid.Row="5" Grid.Column="1"/>
                        <TextBox x:Name="TextBoxSmallMedal" Grid.Row="6" Grid.Column="1"/>
                        <ComboBox x:Name="ComboBoxPartyOrder1" Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="2"/>
                        <ComboBox x:Name="ComboBoxPartyOrder2" Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="2"/>
                        <ComboBox x:Name="ComboBoxPartyOrder3" Grid.Row="13" Grid.Column="1" Grid.ColumnSpan="2"/>
                        <ComboBox x:Name="ComboBoxPartyOrder4" Grid.Row="14" Grid.Column="1" Grid.ColumnSpan="2"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="システム">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Content="戦闘から逃げられない"/>
                        <Label Content="買い物ができない" Grid.Row="1"/>
                        <Label Content="防具を装備できない" Grid.Row="2"/>
                        <Label Content="はずかしい呪い" Grid.Row="3"/>
                        <Label Content="戦闘速度" Grid.Row="5"/>
                        <Label Content="BGM" Grid.Row="6"/>
                        <Label Content="効果音" Grid.Row="7"/>
                        <Label Content="カメラ回転" Grid.Row="8"/>
                        <Label Content="Cスティック" Grid.Row="9"/>
                        
                        <CheckBox x:Name="CheckBoxEscapeNG" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <CheckBox x:Name="CheckBoxShopNG" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <CheckBox x:Name="CheckBoxArmorNG" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <CheckBox x:Name="CheckBoxAshamed" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <ComboBox x:Name="ComboBoxBattleSpeed" Grid.Row="5" Grid.Column="1">
                            <ComboBoxItem Content="はやい"/>
                            <ComboBoxItem Content="ふつう"/>
                            <ComboBoxItem Content="おそい"/>
                        </ComboBox>
                        <ComboBox x:Name="ComboBoxBGMVolume" Grid.Row="6" Grid.Column="1">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                        </ComboBox>
                        <ComboBox x:Name="ComboBoxSEVolume" Grid.Row="7" Grid.Column="1">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                        </ComboBox>
                        <ComboBox x:Name="ComboBoxCameraRotate" Grid.Row="8" Grid.Column="1">
                            <ComboBoxItem Content="ノーマル"/>
                            <ComboBoxItem Content="リバース"/>
                        </ComboBox>
                        <ComboBox x:Name="ComboBoxCStickRotate" Grid.Row="9" Grid.Column="1">
                            <ComboBoxItem Content="ノーマル"/>
                            <ComboBoxItem Content="リバース"/>
                        </ComboBox>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
